          "type": "string",
          "example": "e2f7b9d7-1c4e-4a2b-8c3e-5f8d6b8e5a0c"
        },
        "first_name": {
          "type": "string",
          "example": "John"
        },
        "last_name": {
          "type": "string",
          "example": "Doe"
        },
        "email": {
          "type": "string",
          "example": "john@doe.com"
        },
        "password": {
          "type": "string",
          "example": "password123"
        }
      }
    },
    "UserBalance": {
